[user]
	email = nsn@westsoftdevelopment.dk
	name = Nick Nissen
[alias]
	wdiff = !git diff -b
	cob = checkout -b
	wip = commit -am "WIP" --no-verify
	clean-branch = !git remote prune origin && git branch --merged | grep -v master | xargs git branch -d

	branches = branch -a
	tags = tag
	stashes = stash list
	unstage = reset -q HEAD --
	discard = checkout --
	uncommit = reset --mixed HEAD~
	amend = commit --amend
	edit = commit --amend --only
	graph = log --graph -10 --branches --remotes --tags  --format=format:'%Cgreen%h %Cresetâ€¢ %<(75,trunc)%s (%cN, %cr) %Cred%d' --date-order
	lg = log --color --graph --pretty=longline --abbrev-commit --all
[core]
	excludesfile = /home/nsn/.gitignore_global
	editor = vim
	autocrlf = false
	whitespace = cr-at-eol
	ignorecase = true
	eol = lf
[push]
	default = simple
# so much color
[color]
	ui = true
[color "diff"]
	meta = yellow bold
	commit = green bold
	frag = magenta bold
	old = red bold
	new = green bold
	whitespace = red reverse
[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = "red bold 52"
	newNormal = "green bold"
	newHighlight = "green bold 22"
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "status"]
	added = yellow
	changed = green
	untracked = cyan
[diff]
	compactionHeuristic = true
[commit]
	verbose = true
[pretty]
	longline = %Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)%Creset
