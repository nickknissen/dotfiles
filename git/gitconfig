[user]
	email = nickknissen@gmail.com
	name = Nick Nissen
[alias]
	co = checkout
	ec = config --global -e
	cob = checkout -b
	save = !git add -A && git commit -m 'SAVEPOINT'
	wip = commit -am "WIP"
	undo = reset HEAD~1 --mixed
	amend = commit -a --amend
	wipe = !git add -A && git commit -qm 'WIPE SAVEPOINT' && git reset HEAD~1 --hard
	bclean = "!f() { git branch --merged ${1-master} | grep -v " ${1-master}$" | xargs -r git branch -d; }; f"
	bdone = "!f() { git checkout ${1-master} && git up && git bclean ${1-master}; }; f"
	pu=!git fetch origin;git fetch upstream;git merge upstream/master
	clean-branch = !git remote prune origin && git branch --merged | grep -v master | xargs git br -d
[core]
	excludesfile = /home/nkn/.gitignore_global
	editor = vim
